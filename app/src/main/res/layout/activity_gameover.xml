<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/titleGameOver">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="436dp"
        android:layout_height="109dp"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/gameover" />


    <TextView
        android:id="@+id/score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="TextView" android:textAppearance="@style/TextAppearance.AppCompat.Display2"

        android:layout_marginBottom="10dp"/>



    <TextView
        android:id="@+id/highScoreTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Nouveau meilleur score :)" android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        />

    <EditText
        android:id="@+id/highScoreTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Votre nom"
        android:layout_marginTop="10dp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/highScoreTxtBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="saveThenGotoHighScores"
        android:text="Enregistrer Score"
        android:layout_marginBottom="10dp"

        android:visibility="gone"
        />


    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="startGame"
        android:text="Re-Jouer"
        android:layout_marginTop="2dp"

        android:background="#460003"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="gotoHighScores"
        android:text="Meilleurs scores"
        android:background="#460003"
        android:layout_marginTop="2dp"

        />

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="gotoMenuu"
        android:text="Retour au menu"
        android:layout_marginTop="2dp"

        android:background="#460003"/>
</LinearLayout>