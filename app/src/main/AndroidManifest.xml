<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mika.dupot.logistiqueenfolie">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat">


        <activity  android:name=".SplashscreenActivity" android:screenOrientation="portrait" android:theme="@style/Theme.Design.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".TitleActivity" android:screenOrientation="portrait" android:theme="@style/Theme.Design.NoActionBar"></activity>


        <activity android:name=".MainActivity" android:theme="@style/Theme.Design.NoActionBar"></activity>

        <activity android:name=".ParametersActivity" android:screenOrientation="portrait" android:theme="@style/Theme.Design.NoActionBar"></activity>

        <activity android:name=".GameActivity" android:screenOrientation="portrait"  android:theme="@style/Theme.Design.NoActionBar"></activity>



        <activity android:name=".GameoverActivity" android:screenOrientation="portrait"  android:theme="@style/Theme.Design.NoActionBar"></activity>

        <activity android:name=".HighScoresActivity" android:screenOrientation="portrait" android:theme="@style/Theme.Design.NoActionBar"></activity>



    </application>

</manifest>